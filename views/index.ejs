<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styler.css" />

    <title>To-do-List</title>
  </head>
  <body>
    <form action="/create" method="post">
      <input
        type="text"
        name="task"
        id="task"
        placeholder="insira uma tarefa"
      />

      <button class="addbutton" type="submit">Adcionar</button>
    </form>

    <section>
      <ul>
        <% tasksList.forEach((task)=>{ %>

        <li><%= task.task %> | <%= task.date.toLocaleDateString('pt-br') %>
          <a href="">Editar</a>
          <a href="">Apagar</a>
        </li>
        

        <% }) %>
      </ul>
    </section>

    <script src="script.js"></script>
  </body>
</html>
